
@model UserViewModel

<div class="row">
    <div class="text-center col-md-6 offset-md-3">
        <user-picture-thumbnail class="rounded-circle" style="width:200px" picture-url="@Model.PictureUrl">
        </user-picture-thumbnail>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Kullanıcı Bilgileri</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Kullanıcı adı</th>
                    <th>Email</th>
                    <th>Telefon No</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>