﻿
@model List<UserViewModel>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="UserCreate" class="btn btn-outline-success">
        <i class="fa fa-solid fa-plus"></i>
        Kullanıcı ekle
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullacını adı</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Rol işlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.Id"></user-role-names>
                </td>
                <td>
                    <a class="btn btn-outline-success"
                       asp-controller="Role" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Rol ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
